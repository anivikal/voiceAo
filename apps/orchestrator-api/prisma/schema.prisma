generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CallStatus {
  CREATED
  ACTIVE
  HANDED_OFF
  ENDED
}

model Call {
  id        String     @id @default(cuid())
  roomName  String     @unique
  source    String
  status    CallStatus @default(CREATED)
  
  // Context fields
  summary   String?
  entities  Json?
  
  // Timestamps
  createdAt  DateTime  @default(now())
  startedAt  DateTime?
  handedOffAt DateTime?
  endedAt    DateTime?
  updatedAt  DateTime  @updatedAt
  
  // Relations
  turns     Turn[]
  events    Event[]
  
  @@index([status])
  @@index([createdAt])
}

model Turn {
  id         String   @id @default(cuid())
  callId     String
  speaker    String
  text       String
  confidence Float
  language   String
  createdAt  DateTime @default(now())
  
  call       Call     @relation(fields: [callId], references: [id], onDelete: Cascade)
  
  @@index([callId])
}

model Event {
  id        String   @id @default(cuid())
  callId    String
  type      String
  payload   Json
  createdAt DateTime @default(now())
  
  call      Call     @relation(fields: [callId], references: [id], onDelete: Cascade)
  
  @@index([callId])
  @@index([type])
}
